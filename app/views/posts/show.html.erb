<p id="notice"><%= notice %></p>

<article class="post">
  <h1><%= @post.title %></h1>
  
  <p><%= @post.content %></p>
  <span><%= @post.published_at %></span>
</article>

<div class="comments">
<h2>Comments</h2>
<%= render @post.comments %>

<%= render 'comments/form' %>
</div>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
